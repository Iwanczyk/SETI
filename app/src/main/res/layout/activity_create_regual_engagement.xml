<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateRegularEngagementActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SETI.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_create_regular_engagement"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.SETI.AppBarOverlay" />
    </com.google.android.material.appbar.AppBarLayout>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">
            
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/dropdown_list_chose_day_of_week"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_dropdown_week_day_list"
                    android:spinnerMode="dropdown"
                    android:autofillHints="Select day"
                    android:layout_gravity="center_horizontal"
                    />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_title_of_engagement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:inputType="text"
                    android:textSize="@dimen/et_text_size"
                    tools:text="Activity 1" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start time"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/btn_pick_start_time_regular_engagement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Time"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start time"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/btn_pick_end_time_regular_engagement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Time"
                        />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="12dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_note_of_engagement"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:hint="Title"
                    android:inputType="text"
                    android:textSize="@dimen/et_text_size"
                    tools:text="Activity 1" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/dropdown_list_chose_type_of_engagement"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_dropdown_week_day_list"
                android:spinnerMode="dropdown"
                android:autofillHints="Select day"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_lecture_room_number_of_engagement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Title"
                        android:inputType="text"
                        android:textSize="@dimen/et_text_size"
                        tools:text="Activity 1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_building_number_of_engagement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Title"
                        android:inputType="text"
                        android:textSize="@dimen/et_text_size"
                        tools:text="Activity 1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_regular_engagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ADD NEW ENGAGEMENT"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>