<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_non_recurring_engagement_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NonRecurringEngagementDetailsActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SETI.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_non_recurring_engagement_details"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.SETI.AppBarOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_non_recurring_engagement_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/background_color">

        <LinearLayout
            android:id="@+id/ll_non_recurring_engagement_details2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_title_of_non_recurring_engagement_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:inputType="text"
                    android:textSize="@dimen/et_text_size"
                    tools:text="Activity 1"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_start_date_non_recurring_engagement_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/btn_pick_start_date_time_non_recurring_engagement_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_date"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:clickable="false"
                        android:enabled="false"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_end_date_non_recurring_engagement_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/btn_pick_end_date_time_non_recurring_engagement_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_date"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:clickable="false"
                        android:enabled="false"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_assigned_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assigned_members_details_screen"
                android:textColor="@color/accent_color"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_assigned_members_logins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="14sp"
                tools:text="User1, User2, User3"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="86dp"
                android:layout_marginTop="12dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_note_of_non_recurring_engagement_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/additional_note_optional"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/et_text_size"
                    tools:text="Some additional note"
                    android:minHeight="86dp"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_save_edited_non_recurring_engagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/add_new_engagement"
                android:drawableLeft="@drawable/ic_save"
                android:text="@string/save_edited_engagement"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_cancel_edition_non_recurring_engagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:textSize="28sp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>