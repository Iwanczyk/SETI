<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.SettingsActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SETI.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.SETI.PopuopOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SETTINGS"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="32dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/my_profile_screen_content_marginStartEnd"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="@dimen/my_profile_screen_content_marginStartEnd"
        android:layout_marginBottom="@dimen/my_profile_screen_content_marginTopBottom"
        android:elevation="@dimen/card_view_elevation"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Language:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/sp_language_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="42dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Theme:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp"/>

                
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    >

                    <RadioButton
                        android:id="@+id/rb_light_theme_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="LIGHT"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        />

                    <RadioButton
                        android:id="@+id/rb_dark_theme_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="DARK"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"/>

                    <RadioButton
                        android:id="@+id/rb_high_contrast_theme_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:text="HIGH CONTRAST"/>

                </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Font Size:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp"/>


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                >

                <RadioButton
                    android:id="@+id/rb_font_normal_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Normal"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp"
                    />

                <RadioButton
                    android:id="@+id/rb_font_big_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Big"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp"/>

                <RadioButton
                    android:id="@+id/rb_font_large_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="Large"/>

            </RadioGroup>

            <Button
                android:id="@+id/btn_save_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>