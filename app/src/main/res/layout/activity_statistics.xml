<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StatisticsActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SETI.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_statistics"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.SETI.AppBarOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/dropdown_list_chose_type_of_stats"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_dropdown_week_day_list"
        android:spinnerMode="dropdown"
        android:autofillHints="Select day"
        android:layout_gravity="center_horizontal"
        />

        <!-- REGULAR ENGAGEMENT -->
        <LinearLayout
            android:id="@+id/ll_stats_regular_engagements"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <RadioGroup
                android:id="@+id/rg_stats_regular_engagements"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
               >
                <RadioButton
                    android:id="@+id/rb_stats_regular_engagements_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/study_capital"
                    android:background="@drawable/bg_radio_button"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

                <RadioButton
                    android:id="@+id/rb_stats_regular_engagements_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/work_capital"
                    android:background="@drawable/bg_radio_button"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

                <RadioButton
                    android:id="@+id/rb_stats_regular_engagements_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/other_capital"
                    android:background="@drawable/bg_radio_button"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_stats_regular_engagements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    <!--END -->

    <!-- Non recurring engagements -->
    <LinearLayout
        android:id="@+id/ll_stats_non_recurring_engagements"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            >

            <Button
                android:id="@+id/btn_stats_previous_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&lt;&lt;"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_stats_non_recurring_engagement_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 2023"
                android:layout_weight="8"
                android:textSize="20sp"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/btn_stats_next_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&gt;&gt;"
                android:layout_weight="1"
                android:textSize="26sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_stats_non_recurring_engagements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <!-- END -->


</LinearLayout>